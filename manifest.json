{
  "manifest_version": 3,
  "name": "Auto Form Filler",
  "version": "1.2",
  "description": "An intelligent form filler for job applications.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "icons": {
    "48": "./icons/icon.png"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./popup/popup.js"],
      "run_at": "document_idle"
    }
  ]
}
